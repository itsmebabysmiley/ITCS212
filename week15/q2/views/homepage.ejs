<!DOCTYPE html>
<html language="en">
<head>
  <title>Home</title>
  <%- include('./partials/style'); %>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <%- include('./partials/header'); %>
    <!-- Content -->
    <div class="row p-3">
      <% for(var i=0; i <data.length; i++) { %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> <%= data[i].header %></h5>
            <p class="card-text">
              <%= data[i].content %>
              <br /><br />Due date: <%= new Intl.DateTimeFormat('en-US').format(new Date(data[i].duedate)) %>
            </p>
            <a href="#" class="btn btn-dark">View Detail</a>
          </div>
        </div>
      </div>
      <% } %>
      
      
    </div>
    <!-- Footer -->
    <%- include('./partials/footer'); %>
  </div>
</body>
</html>