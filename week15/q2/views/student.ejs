<body>
    <%- include('./partials/header'); %>
    <div class="container">
        <h1>List of <%= data.length %></h1>
        <div class="row p-3">
        <% for(var i=0; i <data.length; i++) { %>
            <div class="col-sm-4">
                <div class="card" style="margin: 1rem; border: none;">
                    <div class="card-header" style="background-color: rgb(46, 132, 245); color:aliceblue">
                    Student# <%= i+1 %>
                    </div>
                    <div class="card-body">
                    <h5 class="card-title"> <%= data[i].firstname %> <%= data[i].lastname %> </h5>
                    <p class="card-text"> Age: <%= data[i].age   %> <br/>Email: <%= data[i].email   %></p>
                

                    </div>
                </div>
            </div>
        <% } %>
